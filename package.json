  "type": "module",
  "scripts": {
    "dev": "node --max-http-header-size=16384 ./node_modules/vite/bin/vite.js dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
