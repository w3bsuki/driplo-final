    "analyze": "npm run build && vite-bundle-visualizer",
    "perf": "node scripts/performance-monitor.js",
    "benchmark": "node scripts/build-performance-test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
